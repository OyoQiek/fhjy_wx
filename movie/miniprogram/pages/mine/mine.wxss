/* pages/mine/mine.wxss */
page{
  background: #e8e8e8;
}
.top{
  background: #fa940e;
  display: flex;
  flex-flow: column nowrap;
  justify-content: flex-start;
  align-items: center;
  height: 400rpx;
}
.top image{
  margin-top: 30rpx;
  width: 100rpx;
  height: 100rpx;
  background: #fff;
  border-radius: 50%;
}
.top view{
  color: #fff;
  border: 1px solid #fff;
  padding: 10rpx 30rpx;
  border-radius: 4px;
  margin-top: 30rpx;
  font-size: 30rpx;
}
.item{
  background: #fff;
  border-top: 1px solid #ddd;
  border-bottom: 1px solid #ddd;
  margin-top: 30rpx;
}
.item>view{
  padding: 10rpx 20rpx;
  font-size: 28rpx;
}
.item view view{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 10rpx 0;
}
.item view view~view{
  border-top: 1px solid #ddd;
}
.item view view image{
  width: 60rpx;
  height: 60rpx;
}


