/* pages/moviedetail/moviedetail.wxss */

/* 背景图片 */
.detail_container{
  height: 400rpx;
  opacity: .9;
  filter: blur(40rpx);  /*高斯模糊*/
}

/* 遮罩层 */
.detail_mask{
  width: 100%;
  height: 400rpx;
  background: #333;
  position: absolute;
  left: 0;
  top: 0;
  z-index: -1;
}
/* 电影详情列表 */
.detail_info{
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 400rpx;
  display: flex;
  padding: 20rpx;
}
/* 左侧的图片 */
.detail_img{
  width: 280rpx;
  height: 90%;
  margin-right: 24rpx;
}
/* 右侧的区域 */
.detail{
  line-height: 60rpx;
}
.detail view{
  color: #fff;
  font-size: 24rpx;
}
.detail view.detail_nm{
  font-size: 30rpx;
}
.detail .detail_sc{
  color: #fc0;
  font-size: 36rpx;
  display: flex;
  justify-content: flex-start
}
.detail .detail_sc view{
  color: #fc0;
}
.desc_cont{
  margin: 20rpx;
  border-bottom: 1px solid #e8e8e8;
}
.desc_title{
  font-weight: 700;
  font-size: 30rpx;
}
.desc{
  color: #555;
  font-size: 24rpx;
  text-indent: 48rpx;
  padding: 20rpx;
}
.desc1{
  color: #555;
  font-size: 24rpx;
  padding: 20rpx;
  position: relative;
}
.buyticket{
  box-sizing: border-box;
  padding: 20rpx;
  position: fixed;
  bottom: 0;
  width: 100%;
  z-index: 2;
  background: #fff;
  border-top: 1px solid#e8e8e8;
}
.remarknotice{
  text-align: center;
  color: #000;
  margin-top: 30rpx;
}
.writeremark{
  position: absolute;
  font-size:30rpx;
  color: rgb(255, 136, 0);
  top: -40rpx;
  right: 30rpx;
}
