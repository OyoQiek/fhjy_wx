/* pages/arealist/arealist.wxss */
.container{
  padding: 20rpx;
  box-sizing: border-box;
}
.list{
  display: flex;
  margin-top: 30rpx;
  color: orange
}
.title{
  text-align: center;
}
.citylist{
  width: 20%;
  height: 75vh;
  border-right: 1px solid #e8e8e8;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.citylist view{
  width: 100%;
  height: 60rpx;
  text-align: center;
  border: 1px solid orange;
  border-radius: 8rpx;
  line-height: 60rpx;
  margin-top: 18rpx;
}
.arealist{
  width: 80%;
  padding: 18rpx;
  box-sizing: border-box;
}
.arealist .item{
  border-bottom: 1px solid #e8e8e8;
  padding: 10rpx;
}
.subtitle{
  font-size: 28rpx;
}

